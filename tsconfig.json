{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "dom", "es6"
    ]
  },
  "include": [
    "src/*",
    "typings"
  ]
}
